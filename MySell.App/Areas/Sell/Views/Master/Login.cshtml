<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">H+</h1>
            </div>
            <h3>欢迎使用</h3>
            <div class="form-group">
                <input type="text" class="form-control" id="userName" placeholder="用户名" value="zhou" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="密码" required="">
            </div>
            <button type="submit" id="onsubmit" class="btn btn-primary block full-width m-b">登 录</button>
            @*<p class="text-muted text-center">
                    <a href="#"><small>忘记密码了？</small></a> | <a href="#">注册一个新账号</a>
                </p>*@
        </div>
    </div>
</body>
</html>

<script src="~/Areas/Sell/Content/hplus/js/jquery.min.js"></script>
<script src="~/Areas/Sell/Content/hplus/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $('#onsubmit').click(function () {
        if ($("#userName").val() == '') {
            alert('请输入用户名！');
            return;
        }
        if ($("#password").val() == '') {
            alert('请输入密码！');
            return;
        }

        $.ajax({
            type: "post",
            url: "/Master/Login",
            data: {
                name: $("#userName").val(),
                password: $("#password").val()
            },
            dataType: "json",
            success: function (data) {
                if (data.Code != 0) {
                    alert(data.Message);
                    return;
                }
                location.href = "/Sell/Master/Index"
            },
            error: function (jqXHR) {
                alert('登录失败，请求服务器异常。');
            }
        });
    });
</script>